{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}

<!DOCTYPE html>

<html lang="en">

<head>

    <title>Home</title>

    <meta charset="utf-8">
    <style>
        @font-face{
            font-family:agenfbcyr;
            src:url('fonts/agenfbcyr.ttf');
        }
    </style>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">

    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />

    <meta name="description" content="Your description">

    <meta name="keywords" content="Your keywords">

    <meta name="author" content="Your name">

    <meta name = "format-detection" content = "telephone=no" />

    <!--CSS-->

    <link rel="stylesheet" href="/css/bootstrap.css" >

    <link rel="stylesheet" href="/css/style.css">

    <link rel="stylesheet" href="/css/contact-form.css">

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/js/superfish.js"></script>
    <script src="/js/jquery.easing.1.3.js"></script>
    <script src="/js/jquery.mobilemenu.js"></script>
    <script src="/js/jquery.ui.totop.js"></script>
    <script src="/js/jquery.equalheights.js"></script>
    <script src="/js/camera.js"></script>
    <script src="/js/tmstickup.js"></script>
    <script src="/js/TMForm.js"></script>

    <script>
        $(document).ready(function(){

            $("#cabinet").click(function () {
                $("#login-popup").show();
                return false;
            });

            $(".close").click(function () {
                $("#login-popup").hide();
                return false;
            });

            $("#login").click(function () {
                $("#contact-form").submit();
            });

        });

    </script>



</head>

<body>

<!--header-->

<header>
    <div class="container" style="text-align:center; width:50%">



        <nav class="navbar navbar-default navbar-static-top tm_navbar clearfix" role="navigation">

            <ul class="nav sf-menu clearfix">

                <li><a href="{{ path('guapit_public_contest') }}" class="btn">О школе</a></li>

                <li><a href="{{ path('guapit_public_mobile_rules') }}">Соревнование</a></li>

                <li><a href="{{ path('guapit_public_id_rules') }}">Конкурс</a></li>

                <li><a href="{{ path('guapit_public_program') }}">Программа</a></li>

                <li><a href="{{ path('guapit_public_contacts') }}">Контакты</a></li>

            </ul>

        </nav>
    </div>


    <div class="hed" style="min-height:50px; padding:10px 50px; position:relative">
        <a href="{{ path('guapit_public_homepage') }}" style="float:left"><img src="/img/logo.png" alt="" width="250"></a>
        <a href="{{ path('guapit_public_homepage') }}" style="float:right"><img src="/img/data.png" alt="" width="250"></a>

        {% if user %}
            <div style="text-align:center">
                <a href="{{ path('guapit_public_homepage') }}"><img src="/img/lk1.png" alt="" width="60"></a>
                <h2 style="margin-bottom:10px">{{ user.getFirstName() }} {{ user.getLastName() }}</h2>
                <ul class="main-menu" style="margin-top:0px">
                    <li id="projects"><a href="{{ path('guapit_public_cabinet') }}" >Проекты</a></li>
                    <li id="userinfo"><a href="#">Анкета</a></li>
                    <li id="participants"><a href="{{ path('guapit_public_participants') }}">Участники</a></li>
                    <li><a href="{{ path('guapit_public_logout') }}">Выход</a></li>
                </ul>
            </div>
        {% else %}
                <div style="text-align:center">
                    <a id="cabinet" href="#"><img src="/img/lk.png" alt="" width="300"></a>
                </div>

        {% endif %}
    </div>


    <img src="/img/line-bg01.png" width="100%">
</header>

{% block body %} {% endblock %}

<div id="login-popup" style="display:none;">
    <div class="popup-small">

        <div class="head-popup" style="height:147px;">
            <img src="/img/lk.png" alt="" width="300">
            <button type="button" class="close" style="border-left: 0px;"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        </div>
        <div class="popup-cont" style="text-align: center;">

            <div class="row" style="margin: 0 auto;">
                <form id="contact-form" action="{{ path('guapit_public_login_check') }}" method="post">
                    <fieldset>
                        <label class="email form-div-1" style="width: 100%;">
                            <input type="text" name="email" placeholder="Email" value="" />
                        </label>
                        <label class="phone form-div-3" style="width: 100%;">
                            <input type="password" name="password" placeholder="Пароль" value="" />
                        </label>
                        <div style="width=100%">
                            <a href="#" id="login" class="btn-default btn2">Войти</a>
                        </div>
                    </fieldset>
                    <input type="hidden" name="save" value="1">
                </form>
            </div>
            <div style="padding-top: 20px;">
                <a href="{{ path('guapit_public_registration') }}" style="display:inline-block; margin:0 20px">Регистрация</a>
                <a href="{{ path('guapit_public_remind_pass') }}">Забыли пароль?</a>
            </div>
        </div>

    </div>
    <div class="back-in" style="display: block;"></div>
</div>
<!--footer-->

<footer>

    <div class="container">

        <div class="row">

            <div class="col-lg-12">

                <p>&copy; <em id="copyright-year"></em> <a href="http://guap.ru">ГУАП</a></p>

            </div>
            <div style="text-align:left; padding:0 50px">
                <a href="{{ path('guapit_public_contest') }}" style="display:inline-block; margin:0 20px">Положение о конкурсе</a>
                <a href="{{ path('guapit_public_contacts') }}">Контакты</a>
            </div>

        </div>

        <div class="top-box"></div>

    </div>

</footer>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/tm-scripts.js"></script>
</body>

</html>