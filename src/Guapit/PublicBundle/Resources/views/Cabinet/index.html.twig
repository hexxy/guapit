{# src/Blogger/BlogBundle/Resources/views/layout.html.twig #}
{% extends '::base.html.twig' %}

{% block body %}

    <div class="center-box">
        <div class="container" >
            <div class="row" style="width:822px;margin:0 auto">
                <h2>Мои проекты</h2>
                <div>

                    {% for project in projects %}

                    <div class="thumb-pad2">
                        <div class="thumbnail">
                            <figure><img src="/img/page1_symbol{{ project.getType() }}.png" alt=""></figure>
                            <div class="caption">
                                <a href="{{ path('guapit_public_project', {'id': project.getId()}) }}"><p class="title1">{{ project.getName() }}</p></a>
                            </div>
                            <p>{{ project.getDescription() }}</p>
                            <p><span style="color:#0E0552">Команда:</span>
                                {% for member in project.getMembers() %}
                                    {{ member.getFirstName() }} {{ member.getLastName() }}

                                    {% if loop.last == false %}
                                        ,
                                    {% endif %}
                                {% endfor %}
                            </p>
                        </div>
                    </div>

                    {% endfor %}

                    <a href="{{ path('guapit_public_project', {'id': 0}) }}" class="btn-default btn2" style="margin:20px">Добавить проект</a>
                </div>
            </div>
        </div>

    <script type="text/javascript">
        $("li#projects").addClass('active-main');
    </script>

{% endblock %}